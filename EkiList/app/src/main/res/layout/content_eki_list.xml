                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.ekilist.ekilist.EkiList"


                tools:showIn="@layout/activity_eki_list"> >

